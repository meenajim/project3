<% if @current_user.present? && @current_user.user_type == 'admin'%>
<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th style="width:10%">Name</th>
      <th style="width:10%">User type</th>
      <th style="width:10%">Usercategory</th>
      <th style="width:10%">Dob</th>
      <th style="width:10%">Email</th>
      <th style="width:10%">Family</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td style="width:10%"><%= user.name %></td>
        <td style="width:10%"><%= user.user_type %></td>
        <td style="width:10%"><%= user.usercategory_id %></td>
        <td style="width:10%"><%= user.dob %></td>
        <td style="width:10%"><%= user.email %></td>
        <td style="width:10%"><%= user.family_id %></td>
        <td style="width:10%"><%= link_to 'Show', user %></td>
        <td style="width:10%"><%= link_to 'Edit', edit_user_path(user) %></td>
        <td style="width:10%"><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>

<% end %>
