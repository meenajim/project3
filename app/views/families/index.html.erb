<%if @current_user.nil?%>

<h2>Please <%= link_to 'Sign in', login_path %></h2>

<% elsif @current_user.present?%>


<p id="notice"><%= notice %></p>

<h1>Families</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @families.each do |family| %>

      <tr>
        <td><%= family.name %></td>
        <td><%= family.address %></td>
        <td><%= link_to 'Show', family %></td>
        <td><%= link_to 'Edit', edit_family_path(family) %></td>
        <td><%= link_to 'Destroy', family, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
<%= link_to 'Family Members',new_family_path%>
</table>
<table>
  <% @family_user.each do |user| %>
  <tr>
    <td><%= user.name %></td>

    <td><%#= family.address %></td>
  </tr>
  <% end %>
</table>
<br>

<%= link_to 'New Family', new_family_path %>
<% end %>
