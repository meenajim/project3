<%if @current_user.nil?%>

<h2>Please <%= link_to 'Sign in', login_path,:class => 'badge badge-warning' %></h2>

<% elsif @current_user.present?%>

<p id="notice"><%= notice %></p>

<h2><%= link_to "Today's meal plan", new_mealplan_path,:class => 'badge badge-warning' %></h2>

<div id="calendar">
</div>
<p></p>
<p></p>
<table id="mealplans" class = "table table-bordered">
  <thead>
        <tr>
          <th>Date</th>
          <th>Mealtype</th>
          <th>Veg</th>
          <th>Fruit</th>
          <th>Grain</th>
          <th>Meat</th>
          <th>Milk</th>
          <th>Additional serve</th>
          <th>Graph</th>
        </tr>
      <% @servingguide.each do |servingguide| %>
        <tr>
          <th colspan = "2">Recommended daily serving size</th>
          <th><%= servingguide.veg %></th>
          <th id="Fruit"><%= servingguide.fruit %></th>
          <th id="Grain"><%= servingguide.grain %></th>
          <th id="Meat"><%= servingguide.meat %></th>
          <th id="Milk"><%= servingguide.milk %></th>
          <th id="AddlServe"><%= servingguide.additional_serve %></th>
          <th></th>
        </tr>
      <% end %>
    </thead>
    <tbody>
      <% @mealplan_user.each do |mealplan| %>
        <tr class="date-<%= mealplan.date %>">
          <td><%= mealplan.date %></td>
          <td><%= mealplan.mealtype %></td>
          <td><%= mealplan.veg %></td>
          <td><%= mealplan.fruit %></td>
          <td><%= mealplan.grain %></td>
          <td><%= mealplan.meat %></td>
          <td><%= mealplan.milk %></td>
          <td><%= mealplan.additional_serve %></td>
          <td><%= link_to 'View Graph', mealplanshowbydate_path(mealplan.date),:class => 'badge badge-warning graph'%></td>
        </tr>
      <% end %>

    </tbody>
</table>
<br>
<% end %>
